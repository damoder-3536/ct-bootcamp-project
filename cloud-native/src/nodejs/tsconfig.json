{  
  "compilerOptions": {    
    "target": "ES6",  
    "lib": ["es2015"],                        
    "module": "commonjs",  
    "outDir": "./dist",                       
    "rootDir": "./src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true  
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
